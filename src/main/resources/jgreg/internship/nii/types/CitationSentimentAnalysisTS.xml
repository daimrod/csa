<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <name>Citation Sentiment Analysis Types</name>
  <description/>
  <version>1.0</version>
  <vendor/>
  <types>
    <typeDescription>
      <name>jgreg.internship.nii.types.Sentiment</name>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>score</name>
          <rangeTypeName>uima.cas.Long</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>name</name>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>correct</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>valid</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>

        <featureDescription>
          <name>context</name>
          <rangeTypeName>jgreg.internship.nii.types.CitationContext</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>

    <typeDescription>
      <name>jgreg.internship.nii.types.Token</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>POS</name>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    
    <typeDescription>
      <name>jgreg.internship.nii.types.Citation</name>
      <description>A citation.</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>PMID</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>RID</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>text</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>

    <typeDescription>
      <name>jgreg.internship.nii.types.Title</name>
      <description>Mark a Title</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    </typeDescription>

    <typeDescription>
      <name>jgreg.internship.nii.types.Sentence</name>
      <description>Mark a Sentence</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    </typeDescription>

    <typeDescription>
      <name>jgreg.internship.nii.types.CitationContext</name>
      <description>Mark a Citation Context</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>ID</name>
          <description>Context ID</description>
          <rangeTypeName>uima.cas.Long</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>PMIDS</name>
          <description>The PMIDS covered by the CitationContext</description>
          <rangeTypeName>uima.cas.FSArray</rangeTypeName>
          <elementType>jgreg.internship.nii.types.Citation</elementType>
        </featureDescription>
      </features>          
    </typeDescription>

    <typeDescription>
      <name>jgreg.internship.nii.types.Paragraph</name>
      <description>Mark a Paragraph</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    </typeDescription>
    
    <typeDescription>
      <name>jgreg.internship.nii.types.Section</name>
      <description>Mark a Section</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    </typeDescription>

    <typeDescription>
      <name>jgreg.internship.nii.types.ID</name>
      <description>ID(s) of the document.</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <featureDescription>
        <name>PMID</name>
        <description>The PMID of the document.</description>
        <rangeTypeName>uima.cas.String</rangeTypeName>
      </featureDescription>
      <featureDescription>
        <name>year</name>
        <description>The Year of the document.</description>
        <rangeTypeName>uima.cas.Long</rangeTypeName>
      </featureDescription>
      <featureDescription>
        <name>title</name>
        <description>The title of the document.</description>
        <rangeTypeName>uima.cas.String</rangeTypeName>
      </featureDescription>
    </typeDescription>
    
    <typeDescription>
      <name>jgreg.internship.nii.types.Filename</name>
      <description>filename of the document.</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <featureDescription>
        <name>Filename</name>
        <description>The Filename of the document.</description>
        <rangeTypeName>uima.cas.String</rangeTypeName>
      </featureDescription>
    </typeDescription>
  </types>
</typeSystemDescription>
